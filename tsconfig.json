{
    "compilerOptions": {
        "lib": [
            "es2022",
            "DOM"
        ],
        "module": "commonjs",
        "target": "es2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}